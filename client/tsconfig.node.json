{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "types": ["node"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,

        /* Linting */
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        }
    },
    "include": ["vite.config.ts"]
}
